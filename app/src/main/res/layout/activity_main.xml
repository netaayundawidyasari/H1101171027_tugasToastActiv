<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_HelloNeta"
        android:layout_width="317dp"
        android:layout_height="108dp"
        android:onclick="Hello Neta"
        android:textColorHighlight="#03A9F4"
        android:textColorLink="#2196F3"
        app:layout_constraintBottom_toTopOf="@+id/button_CountDown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_CountDown"
        android:layout_width="317dp"
        android:layout_height="101dp"
        android:background="#2196F3"
        android:onclick="CountDown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501" />

    <Button
        android:id="@+id/button_CountUp"
        android:layout_width="317dp"
        android:layout_height="105dp"
        android:layout_marginEnd="156dp"
        android:layout_marginRight="156dp"
        android:background="#009688"
        android:onclick="CountUp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.885" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="475dp"
        android:layout_height="722dp"
        android:layout_marginTop="4dp"
        android:background="#07F5E2"
        android:gravity="center"
        android:text="27"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#2196F3"
        android:textSize="160sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>